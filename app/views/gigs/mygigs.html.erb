<div class="container">
  <h3>My Gigs <small class="pull-right"><%= @gigs.count %> total</small></h3>
  <table class="table">
    <thead>
      <tr>
        <th class="text-center">Status</th>
        <th>Name</th>
        <th>Category</th>
        <th>Budget</th>
        <th class="text-center">Proposals</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @gigs.each do |gig| %>
        <tr>
          <td>
            <% if gig.open %>
              open
            <% else %>
              close
            <% end %>
          </td>
          <td>
            <%= link_to gig.name, gig %>
          </td>
          <td>
            <%= gig.category.name %>
          </td>
          <td>
            <%= number_to_currency(gig.budget, precision: 0) %>
          </td>
          <td>
            <%= gig.proposals.count %>
          </td>
          <td><%= link_to "Edit", edit_gig_path(gig), class: "text-warning" %></td>
          <td><%= link_to "Delete", gig_path(gig), method: :delete, data: { confirm: "Are you sure?" }, class: "text-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
