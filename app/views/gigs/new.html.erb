<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= simple_form_for @gig do |f| %>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.input :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.input :location, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.input :description, input_html: { row: 20 }, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.input :budget, class: "form-control" %>
          </div>
          <%= f.button :submit, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
